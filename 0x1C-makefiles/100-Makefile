# Makefile for building and cleaning the 'school' executable

CC := gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME := school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

$(OBJ): m.h
